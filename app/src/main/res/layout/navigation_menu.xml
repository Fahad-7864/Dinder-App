<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the Navigation menu. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Linear layout for using navigation buttons horizontally. -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- ImageButton for navigating to the swipe activity. -->
        <ImageButton
            android:id="@+id/nav_button1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/swipe"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <!-- ImageButton for navigating to the home activity. -->
        <ImageButton
            android:id="@+id/nav_button2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <!-- ImageButton for navigating to the liked recipes activity. -->
        <ImageButton
            android:id="@+id/nav_button3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/liked"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>